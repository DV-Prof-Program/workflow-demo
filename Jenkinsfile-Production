pipeline {
    agent any

    stages {
        stage('Wait for Approval') {
            steps {
                timeout(time: 2, unit: 'HOURS') {
                    input message: 'Promote latest staging build to PRODUCTION?'
                }
            }
        }
        stage('Deploy to Production') {
            steps {
                sh 'scp target/MyApp.jar user@production-server:/apps/'
            }
        }
        stage('Production Health Check') {
            steps {
                sh 'curl http://production-server:8080/health'
            }
        }
    }
}
