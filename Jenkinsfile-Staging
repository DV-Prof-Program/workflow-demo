pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps { git 'https://github.com/yourusername/yourrepo.git' }
        }
        stage('Build') {
            steps { sh 'mvn clean package' }
        }
        stage('Test') {
            steps { sh 'mvn test' }
        }
        stage('Deploy to Staging') {
            steps {
                sh 'scp target/MyApp.jar user@staging-server:/apps/'
            }
        }
        stage('Smoke Test') {
            steps { sh 'curl http://staging-server:8080/health' }
        }
    }
}
